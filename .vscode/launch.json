{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch ASP.NET Core (Kestrel)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/src/Api/bin/Debug/net9.0/Api.dll",
      "args": [
        "--urls",
        "http://localhost:5000"
      ],
      "cwd": "${workspaceFolder}/src/Api",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on: (https?://\\S+)"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/src/Api/Views"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      }
    },
    {
      "name": "Attach to Process",
      "type": "coreclr",
      "request": "attach",
      "processId": "${command:pickProcess}"
    }
  ]
}